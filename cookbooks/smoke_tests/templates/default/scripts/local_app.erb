require 'rake'
require 'rspec/core/rake_task'
require 'json'

settings = JSON.parse(File.read('<%= node['deployment_settings_json'] %>'))

ENV['domain.name'] = ''
ENV['app_server'] = '<%= @app_server %>'
ENV['db_server'] = '<%= @db_server %>'
ENV['db_port'] = settings['database_port']
ENV['search_server'] = '<%= @search_server %>'


#todo: remove following line once all deployments are >= rev 10 of search server
ENV['elastic_search_port'] = settings['search_port']
ENV['search_port'] = settings['search_port']

puts "ENV['rightscale_account'] = #{ENV['rightscale_account']}"

RSpec::Core::RakeTask.new(:spec) do |t|
  t.pattern = '<%= node['binaries_directory'] %>/CI/spec/Smoke/deploy_<%= @server_type %>_spec.rb'
end

task :default => [:spec]