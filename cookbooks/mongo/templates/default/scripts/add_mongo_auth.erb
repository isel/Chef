require 'rake'
require 'mongo'

require '<%= @binaries_directory %>/CI/BuildScripts/Helpers/process'

database = 'admin'
admin_user_mongo = '<%= @admin_user_mongo %>'
admin_password_mongo = '<%= @admin_password_mongo %>'
