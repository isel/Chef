require 'rake'
require 'mongo'

if ENV['RS_REBOOT'] =~ /true/
  $stderr.puts 'Skipping admin credentials during reboot.'
  exit 0
end

database = 'admin'
admin_user_mongo = '<%= @admin_user_mongo %>'
admin_password_mongo = '<%= @admin_password_mongo %>'
db_port = '<%= @db_port %>'

connection = Mongo::Connection.new('localhost', db_port, { :safe => true })
db = connection.db( database )
db.add_user(admin_user_mongo, admin_password_mongo)
